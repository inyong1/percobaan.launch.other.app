    android:layout_height="fill_parent"
    android:orientation="vertical" 
	android:gravity="center">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Masuk Settings" 
		android:onClick="masukSettings"/>
		
	<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Masuk Galery (Quick Pic)" 
		android:onClick="masukGalery"/>
		
	<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Masuk Phonbook" 
		android:onClick="masukPhoneBook"/>

</LinearLayout>
